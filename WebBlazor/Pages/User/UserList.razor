@page "/system_user"
@using Common.Model
@using Common.Model.UsUser
@using Common.Model.UsGroup
@using Common.Model.Common
@using Common.Library.Constant
@using WebBlazor.Services
@using WebBlazor.Components
@using Microsoft.AspNetCore.Components.Forms
@inject AuthenticationStateProvider AuthStateProvider
@using Microsoft.AspNetCore.Components.Authorization
@inject UserApiClient UserService
@inject NotificationService NotificationService
@inject IJSRuntime JS
@implements IDisposable

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Danh sách người dùng</h5>
                <div class="card-header-right">
                    <ul class="list-unstyled card-option d-inline-block mb-0">
                        <li><i class="feather icon-maximize full-card"></i></li>
                        <li><i class="feather icon-minus minimize-card"></i></li>
                    </ul>
                </div>
            </div>

            <div class="card-block">
                @if (isLoading && !dataTableInitialized)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Đang tải dữ liệu...</p>
                    </div>
                }
                else
                {
                    @* LUÔN HIỆN TABLE - Kể cả khi không có data *@
                                @* class= "table-responsive" *@
                    <div  @ref="tableContainerRef">
                        <table id="@tableId" class="table table-striped table-hover table-bordered" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th>Id</th>
                                    <th>Nhóm</th>
                                    <th>Họ Tên</th>
                                    <th>Tên đăng nhập</th>
                                    <th>Email</th>
                                    <th>Điện thoại</th>
                                    <th>CMND</th>
                                    <th>Địa chỉ</th>
                                    <th>Ghi chú</th>
                                    @* <th>Trạng thái</th> *@
                                    <th>Ngày tạo</th>
                                    <th>Người tạo</th>
                                    <th>Ngày cập nhật</th>
                                    <th>Người cập nhật</th>
                                    <th style="width: 120px;">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* DataTable manage data *@
                            </tbody>
                        </table>
                        
                        <div class="dt-custom-pagination" style="display: flex; justify-content: space-between; align-items: center; padding: 10px 0;">
                            <div class="dt-pagination-info">
                                @if (paginatedUsers != null && paginatedUsers.TotalRecords > 0)
                                {
                                    <span>
                                        Hiển thị từ @((paginationRequest.PageNumber - 1) * paginationRequest.PageSize + 1)
                                        đến @(Math.Min(paginationRequest.PageNumber * paginationRequest.PageSize, paginatedUsers.TotalRecords))
                                        trong @paginatedUsers.TotalRecords bản ghi
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Không có dữ liệu phù hợp</span>
                                }
                            </div>
                            <div class="dt-pagination-buttons">
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="() => ChangePage(1)"
                                        disabled="@(paginatedUsers == null || !paginatedUsers.HasPreviousPage)">
                                    «
                                </button>
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="() => ChangePage(paginationRequest.PageNumber - 1)"
                                        disabled="@(paginatedUsers == null || !paginatedUsers.HasPreviousPage)">
                                    ‹
                                </button>
                                <span class="mx-2">
                                    Trang @paginationRequest.PageNumber / @(paginatedUsers?.TotalPages ?? 1)
                                </span>
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="() => ChangePage(paginationRequest.PageNumber + 1)"
                                        disabled="@(paginatedUsers == null || !paginatedUsers.HasNextPage)">
                                    ›
                                </button>
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="() => ChangePage(paginatedUsers?.TotalPages ?? 1)"
                                        disabled="@(paginatedUsers == null || !paginatedUsers.HasNextPage)">
                                    »
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- User Modal Component -->
<UserModal UserModel="usUserFormModel"
           IsEditMode="isEditMode"
           IsProcessing="isProcessing"
           Groups="allGroups"
           @bind-Password="password"
           @bind-ConfirmPassword="confirmPassword"
           OnSubmit="HandleSaveUser"
           OnClose="CloseModals" />

<!-- Generic Delete Confirmation Modal -->
<DeleteConfirmationModal IsVisible="@isDeleteModalVisible"
                        IsProcessing="@isProcessing"
                        ItemName="@deleteUserName"
                        OnConfirm="HandleDeleteUser"
                        OnCancel="CloseModals" />

@code {
    // State cho pagination
    private PaginatedResponse<UsUserViewModel> paginatedUsers = new();
    private PaginatedRequest paginationRequest = new() { PageNumber = 1, PageSize = 10 };

    private List<UsGroupViewModel> allGroups = new();
    private bool isLoading = true;
    private bool dataTableInitialized = false;
    private bool layoutInitialized = false;
    private DotNetObjectReference<UserList>? objRef;
    private string tableId = "userDataTable";
    // Flags để ngăn concurrent operations
    private bool isDataOperationInProgress = false;

    // Reference đến container
    private ElementReference tableContainerRef;

    // Modal states
    private UsUserFormModel usUserFormModel = new();
    private bool isEditMode = false;
    private bool isProcessing = false;
    private string deleteUserId = string.Empty;
    private string deleteUserName = string.Empty;
    private bool isDeleteModalVisible = false;
    private string password = string.Empty;
    private string confirmPassword = string.Empty;

    // Header dynamics configuration
    private List<TableColumnConfig> TableColumns = new()
    {
        new TableColumnConfig { Property = "Id", DisplayName = "Id", Width = "80px" },
        new TableColumnConfig { Property = "GroupName", DisplayName = "Nhóm", Width = "150px" },
        new TableColumnConfig { Property = "Name", DisplayName = "Họ Tên", Width = "200px" },
        new TableColumnConfig { Property = "UserName", DisplayName = "Tên đăng nhập", Width = "150px" },
        new TableColumnConfig { Property = "Email", DisplayName = "Email", Width = "200px" },
        new TableColumnConfig { Property = "Phone", DisplayName = "Điện thoại", Width = "120px" },
        new TableColumnConfig { Property = "CMND", DisplayName = "CMND", Width = "120px" },
        new TableColumnConfig { Property = "Address", DisplayName = "Địa chỉ", Width = "200px" },
        new TableColumnConfig { Property = "Note", DisplayName = "Ghi chú", Width = "150px" },

        // new TableColumnConfig { Property = "RowStatus", DisplayName = "Trạng thái", Width = "120px" },
        new TableColumnConfig { Property = "CreatedAt", DisplayName = "Ngày tạo", Width = "180px" }, 
        new TableColumnConfig { Property = "CreatedBy", DisplayName = "Người tạo", Width = "140px" },
        new TableColumnConfig { Property = "UpdatedAt", DisplayName = "Ngày cập nhật", Width = "180px" },
        new TableColumnConfig { Property = "UpdatedBy", DisplayName = "Người cập nhật", Width = "140px" },
    };

    protected override async Task OnInitializedAsync()
    {
        // KHÔNG nạp groups ở đây để tránh treo trang nếu có 50k groups
        isLoading = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            objRef = DotNetObjectReference.Create(this);
        }

        if (!isLoading && !layoutInitialized)
        {
            layoutInitialized = true;
            await InitDataTable();
            
            // Khởi tạo layout adminty giống như
            try {
                // Reload layout scripts để đảm bảo NavMenu và SettingTheme hoạt động
                await JS.InvokeVoidAsync("adminAssetManager.initAdminLayout");
                Task.Delay(2000).Wait(); // Chờ một chút để layout ổn định
            } catch (Exception ex) {
                // Console.WriteLine($"Error initializing layout: {ex.Message}");
            }
        }
    }

    private async Task InitDataTable()
    {
        if (dataTableInitialized) return;

        await JS.InvokeVoidAsync("registerBlazorInstance", objRef);
        
        var config = new {
            dom = "rt",      // CHỈ hiện table (r) và processing (t), không hiện paging/info/search mặc định
            paging = false, 
            info = false,   
            serverSide = false,
            columnNames = TableColumns.Select(c => c.DisplayName).Concat(new[] { "Hành động" }).ToArray(),
            columns = TableColumns.Select(c => c.Property).ToArray(),
            idField = "Id",
            idDataAttr = "data-user-id",
            bindEvents = "bindAllRowEvents", // xử lý sự kiện cho các nút trong row
            actionRenderer = "getUserActionButtons",
            addBtnId = "btnAddNewUser"
        };

        await JS.InvokeVoidAsync("initGenericDataTable", $"#{tableId}", config);
        dataTableInitialized = true;
        
        await RefreshData();
    }

    private async Task RefreshDataTable()
    {
        if (dataTableInitialized)
        {
            await JS.InvokeVoidAsync("updateGenericDataTableData", $"#{tableId}", paginatedUsers);
        }
    }

    private async Task RefreshData()
    {
        var sw = System.Diagnostics.Stopwatch.StartNew();
        try 
        {
            paginatedUsers = await UserService.GetPaginatedUsersAsync(paginationRequest);
            sw.Stop();
            // Console.WriteLine($"[UserList] Data fetched in {sw.ElapsedMilliseconds}ms. Records: {paginatedUsers.TotalRecords}");
            
            await RefreshDataTable();
            StateHasChanged();

            // 
            //  sau khi Blazor render xong các thành phần, JS sẽ gọi phần điểu chỉnh adjust để header và body table không lệch.
            await JS.InvokeVoidAsync("eval", $"if(window.dataTableInstances['#{tableId}']) window.dataTableInstances['#{tableId}'].columns.adjust();");
        }
        catch (Exception ex)
        {
            // Console.WriteLine($"Error refreshing data: {ex.Message}");
        }
    }

    private async Task ChangePage(int pageNumber)
    {
        paginationRequest.PageNumber = pageNumber;
        await RefreshData();
    }

    [JSInvokable("ChangePageSize")]
    public async Task ChangePageSize(int pageSize)
    {
        paginationRequest.PageSize = pageSize;
        paginationRequest.PageNumber = 1;
        await RefreshData();
    }

    [JSInvokable("SearchUsers")]
    public async Task SearchUsers(string term)
    {
        // Khi search, reset về trang 1
        paginationRequest.SearchTerm = term;
        paginationRequest.PageNumber = 1;
        
        await RefreshData();
    }

    public class TableColumnConfig
    {
        public string Property { get; set; } = "";
        public string DisplayName { get; set; } = "";
        public string? Width { get; set; }
    }

    

    // Load data với pagination
    private async Task LoadData()
    {
        paginatedUsers = await UserService.GetPaginatedUsersAsync(paginationRequest);
    }

    private async Task LoadGroups()
    {
        // Không cần load trước 50k nhóm nữa, MudAutocomplete sẽ tự search server-side
        await Task.CompletedTask;
    }

    #region Modal Operations
    // Hàm này được gọi từ JS var addBtnHtml
    [JSInvokable("OpenAddModal")]
    public async Task OpenAddModal()
    {
        isEditMode = false;
        await LoadGroups(); // Nạp groups lười khi mở modal
        usUserFormModel = new UsUserFormModel { RowStatus = 1, ChangePassword = false };
        password = string.Empty;
        confirmPassword = string.Empty;
        StateHasChanged();
        await JS.InvokeVoidAsync("eval", "$('#userModal').modal('show')");
    }

  
    // Xử lý sự kiện mở modal sửa từ JS (DataTable) bằng userId, hàm này được gọi từ JS ở phần $row.find('.btn-edit-user') 
    [JSInvokable("OpenEditModalById")]
    public async Task OpenEditModalById(string userId)
    {
        var user = await UserService.GetUserByIdAsync(userId);
        if (user != null)
        {
            isEditMode = true;
            await LoadGroups(); // Nạp groups lười khi mở modal
            usUserFormModel = new UsUserFormModel
            {
                Id = user.Id,
                Name = user.Name,
                UserName = user.UserName,
                GroupId = user.GroupId,
                Email = user.Email,
                Phone = user.Phone,
                Gender = user.Gender,
                CMND = user.CMND,
                Address = user.Address,
                Image = user.Image,
                Note = user.Note,
                RowStatus = user.RowStatus,
                ChangePassword = false // Mặc định không đổi password
            };
            password = string.Empty;
            confirmPassword = string.Empty;
            StateHasChanged();
            await JS.InvokeVoidAsync("eval", "$('#userModal').modal('show')");
        }
    }

    // Xử lý sự kiện mở modal xóa từ JS (DataTable) bằng userId, hàm này được gọi từ JS ở phần $row.find('.btn-delete-user')
    [JSInvokable("OpenDeleteModalById")]
    public async Task OpenDeleteModalById(string userId)
    {
        var user = paginatedUsers.Items.FirstOrDefault(u => u.Id == userId);
        if (user != null)
        {
            deleteUserId = user.Id;
            deleteUserName = user.Name;
            isDeleteModalVisible = true;
            StateHasChanged();
        }
    }



    private async Task CloseModals()
    {
        await JS.InvokeVoidAsync("eval", "$('#userModal').modal('hide')");
        
        usUserFormModel = new UsUserFormModel();
        password = string.Empty;
        confirmPassword = string.Empty;
        deleteUserId = string.Empty;
        deleteUserName = string.Empty;
        isDeleteModalVisible = false;
        isProcessing = false;

        StateHasChanged();
    }

    #endregion

    #region CRUD Operations

    private async Task HandleSaveUser()
    {
        if (isProcessing || isDataOperationInProgress) return;

        isProcessing = true;
        isDataOperationInProgress = true;
        StateHasChanged();

        try
        {
            // Validation cơ bản
            if (string.IsNullOrWhiteSpace(usUserFormModel.Name))
            {
                await ShowNotification("error", "Vui lòng nhập tên người dùng!");
                return;
            }

            if (string.IsNullOrWhiteSpace(usUserFormModel.UserName))
            {
                await ShowNotification("error", "Vui lòng nhập tên đăng nhập!");
                return;
            }

            if (string.IsNullOrWhiteSpace(usUserFormModel.GroupId))
            {
                await ShowNotification("error", "Vui lòng chọn nhóm!");
                return;
            }

            if (!isEditMode)
            {
                // Validation cho password khi tạo mới
                if (string.IsNullOrWhiteSpace(password))
                {
                    await ShowNotification("error", MessageConstant.PASSWORD_NOT_NULL);
                    return;
                }

                if (password != confirmPassword)
                {
                    await ShowNotification("error", MessageConstant.PASSWORD_NOT_MATCH);
                    return;
                }

                // CREATE
                var createRequest = new UsUserCreateModel
                {
                    Name = usUserFormModel.Name,
                    UserName = usUserFormModel.UserName,
                    Password = password,
                    GroupId = usUserFormModel.GroupId,
                    Email = usUserFormModel.Email,
                    Phone = usUserFormModel.Phone,
                    Gender = usUserFormModel.Gender,
                    CMND = usUserFormModel.CMND,
                    Address = usUserFormModel.Address,
                    Note = usUserFormModel.Note,
                    RowStatus = usUserFormModel.RowStatus
                };

                var newUser = await UserService.CreateUserAsync(createRequest);

                if (newUser != null)
                {
                    // Đóng modal trước
                    await JS.InvokeVoidAsync("eval", "$('#userModal').modal('hide')");

                    // Reset form
                    usUserFormModel = new UsUserFormModel();
                    password = string.Empty;
                    confirmPassword = string.Empty;

                    await ShowNotification("success", $"Thêm người dùng '{newUser.Name}' thành công!");

                    if (dataTableInitialized)
                    {
                        // await RefreshDataTable();
                        await RefreshData();
                        await JS.InvokeVoidAsync("addUserRowSmooth", $"#{tableId}", newUser.Id);
                    }
                    
                    StateHasChanged();
                }
            }
            else
            {
                // UPDATE
                var updateRequest = new UsUserUpdateModel
                {
                    Id = usUserFormModel.Id,
                    Name = usUserFormModel.Name,
                    UserName = usUserFormModel.UserName,
                    GroupId = usUserFormModel.GroupId,
                    Email = usUserFormModel.Email,
                    Phone = usUserFormModel.Phone,
                    Gender = usUserFormModel.Gender,
                    CMND = usUserFormModel.CMND,
                    Address = usUserFormModel.Address,
                    Note = usUserFormModel.Note,
                    RowStatus = usUserFormModel.RowStatus,
                    IsChangePassword = usUserFormModel.ChangePassword,
                    Password = usUserFormModel.ChangePassword ? password : null
                };

                // Validation cho password nếu chọn đổi
                if (updateRequest.IsChangePassword == true)
                {
                    if (string.IsNullOrWhiteSpace(password))
                    {
                        await ShowNotification("error", MessageConstant.PASSWORD_NOT_NULL);
                        return;
                    }

                    if (password != confirmPassword)
                    {
                        await ShowNotification("error", MessageConstant.PASSWORD_NOT_MATCH);
                        return;
                    }
                }

                var updatedUser = await UserService.UpdateUserAsync(updateRequest);

                if (updatedUser != null)
                {
                    // Đóng modal trước
                    await JS.InvokeVoidAsync("eval", "$('#userModal').modal('hide')");

                    // Lưu userId để dùng cho animation
                    var updatedUserId = usUserFormModel.Id;
                    
                    // Reset form
                    usUserFormModel = new UsUserFormModel();
                    password = string.Empty;
                    confirmPassword = string.Empty;

                    await ShowNotification("success", $"Cập nhật người dùng '{updatedUser.Name}' thành công!");

                    if (dataTableInitialized)
                    {
                        // await RefreshDataTable();
                        await RefreshData();
                        await JS.InvokeVoidAsync("updateUserRowSmooth", $"#{tableId}", updatedUserId);
                    }
                    
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            await ShowNotification("error", $"Lỗi : {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            isDataOperationInProgress = false;
            StateHasChanged();
        }
    }

    private async Task HandleDeleteUser()
    {
        if (string.IsNullOrEmpty(deleteUserId) || isProcessing || isDataOperationInProgress) return;

        isProcessing = true;
        isDataOperationInProgress = true;

        var idToDelete = deleteUserId;
        var nameToDelete = deleteUserName;

        try
        {
            // Hiệu ứng xóa row TRƯỚC khi xóa thật
            if (dataTableInitialized)
            {
                await JS.InvokeVoidAsync("deleteUserRowSmooth", $"#{tableId}", idToDelete);
            }
            await Task.Delay(400); // Giảm xuống cho animation delete

            // Ẩn modal trước bằng state
            isDeleteModalVisible = false;
            StateHasChanged();

            // Reset state
            deleteUserId = string.Empty;
            deleteUserName = string.Empty;

            // Gọi API xóa
            var result = await UserService.DeleteUserAsync(idToDelete);

            if (result)
            {
                await ShowNotification("success", $"Xóa người dùng '{nameToDelete}' thành công!");
                
                if (dataTableInitialized)
                {
                    await RefreshData();
                    // await RefreshDataTable();
                }
                
                StateHasChanged();
            }
            else
            {
                await ShowNotification("error", "Không thể xóa người dùng này!");
                if (dataTableInitialized)
                {
                    await RefreshDataTable();
                }
            }
        }
        catch (Exception ex)
        {
            await ShowNotification("error", $"Lỗi khi xóa: {ex.Message}");
                if (dataTableInitialized)
                {
                    // await RefreshDataTable();
                await RefreshData();
                }
        }
        finally
        {
            isProcessing = false;
            isDataOperationInProgress = false;
            StateHasChanged();
        }
    }

    #endregion

    #region Helper Methods

    private async Task ShowNotification(string type, string message)
    {
        try
        {
            switch (type)
            {
                case "success":
                    await NotificationService.ShowSuccessAsync(message);
                    break;
                case "error":
                    await NotificationService.ShowErrorAsync(message);
                    break;
                case "warning":
                    await NotificationService.ShowWarningAsync(message);
                    break;
                default:
                    await NotificationService.ShowInfoAsync(message);
                    break;
            }
        }
        catch (Exception ex)
        {
            // Console.WriteLine($"Notification error: {ex.Message}");
        }
    }

    #endregion

    public void Dispose()
    {
        objRef?.Dispose();
        if (dataTableInitialized)
        {
            _ = JS.InvokeVoidAsync("destroyUserDataTable", $"#{tableId}");
        }
    }
}