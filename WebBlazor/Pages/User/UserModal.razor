@using Common.Model.UsUser
@using Common.Model.UsGroup
@using Common.Model.Common
@using Blazored.Typeahead
@using WebBlazor.Services
@inject UserApiClient UserApiClient
@inject Microsoft.JSInterop.IJSRuntime JS
<style>
    /* Đảm bảo MudMenu chiếm đầy đủ width */
    .mud-menu {
        width: 100% !important;
    }

        .mud-menu .mud-button-root {
            width: 100% !important;
            justify-content: space-between !important;
        }

    /* Fix search input trong dropdown */
    .group-search-input {
        width: 100% !important;
    }

        .group-search-input .mud-input-root {
            width: 100% !important;
        }

    /* Fix popover width */
    .group-select-popover {
        min-width: 300px !important;
    }

    /* Animation cho fade in */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
<!-- Add/Edit User Modal -->
<div class="modal fade" id="userModal"  role="dialog" data-backdrop="static" style="z-index: 3000;">
    <div class="modal-dialog modal-lg" role="document" style="max-width: 900px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(IsEditMode ? "Chỉnh sửa người dùng" : "Thêm người dùng mới")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="CloseModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                <EditForm Model="UserModel" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    
                    <!-- SECTION 1: THÔNG TIN CÁ NHÂN -->
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="feather icon-user"></i> Thông tin cá nhân</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Tên <span class="text-danger">*</span></label>
                                        <InputText @bind-Value="UserModel.Name" class="form-control" placeholder="Nhập tên người dùng" />
                                        <ValidationMessage For="@(() => UserModel.Name)" class="text-danger" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Giới tính</label>
                                        <InputSelect @bind-Value="UserModel.Gender" class="form-control">
                                            <option value="">-- Chọn giới tính --</option>
                                            <option value="1">Nam</option>
                                            <option value="0">Nữ</option>
                                        </InputSelect>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <InputText @bind-Value="UserModel.Email" class="form-control" placeholder="Nhập email" />
                                        <ValidationMessage For="@(() => UserModel.Email)" class="text-danger" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Điện thoại</label>
                                        <InputText @bind-Value="UserModel.Phone" class="form-control" placeholder="Nhập số điện thoại" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>CMND/CCCD</label>
                                        <InputText @bind-Value="UserModel.CMND" class="form-control" placeholder="Nhập CMND/CCCD" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        <InputTextArea @bind-Value="UserModel.Address" class="form-control" rows="2" placeholder="Nhập địa chỉ" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Ghi chú</label>
                                        <InputTextArea @bind-Value="UserModel.Note" class="form-control" rows="2" placeholder="Nhập ghi chú" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- SECTION 2: THÔNG TIN ĐĂNG NHẬP -->
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="feather icon-lock"></i> Thông tin đăng nhập</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Tên đăng nhập <span class="text-danger">*</span></label>
                                        @if (IsEditMode)
                                        {
                                            <InputText @bind-Value="UserModel.UserName" class="form-control" placeholder="Nhập tên đăng nhập" disabled />
                                        }
                                        else
                                        {
                                            <InputText @bind-Value="UserModel.UserName" class="form-control" placeholder="Nhập tên đăng nhập" />
                                        }
                                        <ValidationMessage For="@(() => UserModel.UserName)" class="text-danger" />
                                    </div>
                                </div>
                                <!-- Tìm phần MudMenu trong form và thay thế bằng đoạn này -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nhóm <span class="text-danger">*</span></label>
                                        <MudMenu Label="@(_selectedGroup?.Name ?? "Chọn nhóm...")"
                                                 Variant="MudBlazor.Variant.Outlined"
                                                 EndIcon="@Icons.Material.Filled.ArrowDropDown"
                                                 Style="width: 100%;"
                                                 FullWidth="true"
                                                 Dense="true"
                                                 AnchorOrigin="Origin.BottomCenter"
                                                 TransformOrigin="Origin.TopCenter"
                                                 PopoverClass="group-select-popover"
                                                 MaxHeight="400">
                                            <div class="pa-2" style="position: sticky; top: 0; background: white; z-index: 10; border-bottom: 1px solid #e0e0e0;">
                                                <MudTextField T="string" @bind-Value="_groupSearchText"
                                                              Placeholder="Tìm nhanh..."
                                                              Immediate="true"
                                                              OnKeyUp="@OnGroupSearchKeyUp"
                                                              @onclick:stopPropagation="true"
                                                              @onmousedown:stopPropagation="true"
                                                              Adornment="Adornment.Start"
                                                              AdornmentIcon="@Icons.Material.Filled.Search"
                                                              Margin="MudBlazor.Margin.Dense"
                                                              Class="group-search-input" />
                                            </div>
                                            <div style="max-height: 300px; overflow-y: auto; overflow-x: hidden;">
                                                <Virtualize @ref="_virtualizeComponent" ItemsProvider="LoadGroupsVirtualized" Context="group">
                                                    <MudMenuItem OnClick="@(() => OnGroupSelected(group))" Style="white-space: normal; word-wrap: break-word;">
                                                        @group.Name (@group.Id)
                                                    </MudMenuItem>
                                                </Virtualize>
                                            </div>
                                        </MudMenu>
                                        <ValidationMessage For="@(() => UserModel.GroupId)" class="text-danger" />
                                    </div>
                                </div>

                                
                            </div>

                            <!-- TRẠNG THÁI -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Trạng thái <span class="text-danger">*</span></label>
                                        <InputSelect @bind-Value="UserModel.RowStatus" class="form-control">
                                            <option value="1">Hoạt động</option>
                                            <option value="0">Ngừng hoạt động</option>
                                        </InputSelect>
                                    </div>
                                </div>
                            </div>

                            @if (IsEditMode)
                            {
                                <!-- Checkbox đổi password khi Edit - FIXED UI -->
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group mb-3" style="padding: 15px; background: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef;">
                                            <div class="d-flex align-items-center">
                                                <input type="checkbox" 
                                                       id="changePasswordCheck" 
                                                       class="form-check-input"
                                                       style="width: 20px; height: 20px; margin-right: 12px; cursor: pointer; accent-color: #01a9ac;"
                                                       checked="@UserModel.ChangePassword"
                                                       @onchange="OnChangePasswordToggle" />
                                                <label for="changePasswordCheck" style="cursor: pointer; margin-bottom: 0; font-weight: 600; color: #495057;">
                                                    <i class="feather icon-key" style="margin-right: 8px; color: #01a9ac;"></i>
                                                    Đổi mật khẩu
                                                </label>
                                            </div>
                                            @if (UserModel.ChangePassword)
                                            {
                                                <small class="text-muted d-block mt-2" style="margin-left: 32px;">
                                                    <i class="feather icon-info"></i> Nhập mật khẩu mới bên dưới
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </div>

                                @if (UserModel.ChangePassword)
                                {
                                    <div class="row" style="animation: fadeIn 0.3s ease;">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Mật khẩu mới <span class="text-danger">*</span></label>
                                                <input type="password" class="form-control" placeholder="Nhập mật khẩu mới"
                                                       @bind="PasswordValue" @bind:event="oninput" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Xác nhận mật khẩu mới <span class="text-danger">*</span></label>
                                                <input type="password" class="form-control" placeholder="Xác nhận mật khẩu mới"
                                                       @bind="ConfirmPasswordValue" @bind:event="oninput" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <!-- Password cho chế độ tạo mới -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Mật khẩu <span class="text-danger">*</span></label>
                                            <input type="password" class="form-control" placeholder="Nhập mật khẩu"
                                                   @bind="PasswordValue" @bind:event="oninput" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Xác nhận mật khẩu <span class="text-danger">*</span></label>
                                            <input type="password" class="form-control" placeholder="Xác nhận mật khẩu"
                                                   @bind="ConfirmPasswordValue" @bind:event="oninput" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </EditForm>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="CloseModal">
                    <i class="feather icon-x"></i> Đóng
                </button>
                <button type="button" class="btn btn-primary" @onclick="HandleSubmit" disabled="@IsProcessing">
                    @if (IsProcessing)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                        <span>Đang xử lý...</span>
                    }
                    else
                    {
                        <i class="feather icon-save"></i>
                        <span>@(IsEditMode ? "Cập nhật" : "Thêm mới")</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>


<style>
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

@code {
    [Parameter] public UsUserFormModel UserModel { get; set; } = new();
    [Parameter] public bool IsEditMode { get; set; }
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public List<UsGroupViewModel>? Groups { get; set; }

    // Two-way binding cho Password
    [Parameter] public string Password { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> PasswordChanged { get; set; }

    [Parameter] public string ConfirmPassword { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> ConfirmPasswordChanged { get; set; }

    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private string? _groupSearchText;
    private Virtualize<UsGroupViewModel>? _virtualizeComponent;
    private UsGroupViewModel? _selectedGroup;

    protected override async Task OnParametersSetAsync()
    {
        if (UserModel != null && !string.IsNullOrEmpty(UserModel.GroupId))
        {
            // Chỉ fetch thông tin group khi ID thay đổi hoặc chưa có object
            if (_selectedGroup == null || _selectedGroup.Id != UserModel.GroupId)
            {
                _selectedGroup = await UserApiClient.GetGroupByIdAsync(UserModel.GroupId);
            }
        }
        else
        {
            _selectedGroup = null;
        }
    }

    private async ValueTask<ItemsProviderResult<UsGroupViewModel>> LoadGroupsVirtualized(ItemsProviderRequest request)
    {
        var totalCount = await UserApiClient.GetGroupsCountAsync(_groupSearchText);
        var items = await UserApiClient.GetSimpleGroupsAsync(request.StartIndex, request.Count, _groupSearchText);
        
        return new ItemsProviderResult<UsGroupViewModel>(items, totalCount);
    }

    private async Task OnGroupSearchKeyUp(KeyboardEventArgs e)
    {
        if (_virtualizeComponent != null)
        {
            await _virtualizeComponent.RefreshDataAsync();
            StateHasChanged();
        }
    }

    private void OnGroupSelected(UsGroupViewModel group)
    {
        _selectedGroup = group;
        UserModel.GroupId = group.Id;
    }



    // Local values để bind với input
    private string PasswordValue
    {
        get => Password;
        set
        {
            if (Password != value)
            {
                Password = value;
                PasswordChanged.InvokeAsync(value);
            }
        }
    }

    private string ConfirmPasswordValue
    {
        get => ConfirmPassword;
        set
        {
            if (ConfirmPassword != value)
            {
                ConfirmPassword = value;
                ConfirmPasswordChanged.InvokeAsync(value);
            }
        }
    }

    private void OnChangePasswordToggle(ChangeEventArgs e)
    {
        UserModel.ChangePassword = (bool)(e.Value ?? false);
        if (!UserModel.ChangePassword)
        {
            // Reset password fields khi bỏ chọn
            PasswordValue = string.Empty;
            ConfirmPasswordValue = string.Empty;
        }
        StateHasChanged();
    }

    private async Task HandleSubmit()
    {
        await OnSubmit.InvokeAsync();
    }

    private async Task CloseModal()
    {
        await OnClose.InvokeAsync();
    }
}
