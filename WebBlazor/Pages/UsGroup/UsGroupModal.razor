@using Common.Model.UsGroup
@using Common.Model.Common
@inject IJSRuntime JS

<!-- Add/Edit Group Modal -->
<div class="modal fade" id="groupModal" tabindex="-1" role="dialog" aria-labelledby="groupModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="groupModalLabel">@(IsEditMode ? "Chỉnh sửa Nhóm" : "Thêm mới Nhóm")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="OnClose">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="GroupModel" OnValidSubmit="OnSubmit">
                    <DataAnnotationsValidator />
                    
                    @if (IsEditMode)
                    {
                        <div class="form-group mb-3">
                            <label class="form-label font-weight-bold">Mã Nhóm</label>
                            <input type="text" class="form-control bg-light" value="@GroupModel.Id" readonly disabled />
                            <small class="text-muted">Mã nhóm không thể thay đổi.</small>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label class="form-label font-weight-bold">Tên Nhóm <span class="text-danger">*</span></label>
                        <InputText class="form-control" @bind-Value="GroupModel.Name" placeholder="Nhập tên nhóm..." />
                        <ValidationMessage For="@(() => GroupModel.Name)" />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label font-weight-bold">Ghi chú</label>
                        <InputTextArea class="form-control" @bind-Value="GroupModel.Note" rows="3" placeholder="Nhập ghi chú (nếu có)..." />
                    </div>

                    @if (IsEditMode)
                    {
                        <div class="form-group mb-3">
                            <label class="form-label font-weight-bold">Trạng thái</label>
                            <select class="form-control" @bind="GroupModel.RowStatus">
                                <option value="1">Hoạt động</option>
                                <option value="0">Ngừng hoạt động</option>
                            </select>
                        </div>
                    }

                    <div class="modal-footer px-0 pb-0 pt-3">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="OnClose">Đóng</button>
                        <button type="submit" class="btn btn-primary" disabled="@IsProcessing">
                            @if (IsProcessing)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span> Đang lưu...</span>
                            }
                            else
                            {
                                <span>Lưu thay đổi</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter] public UsGroupFormModel GroupModel { get; set; } = new();
    [Parameter] public bool IsEditMode { get; set; }
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task HandleSubmit()
    {
        await OnSubmit.InvokeAsync();
    }

    private async Task CloseModal()
    {
        await OnClose.InvokeAsync();
    }
}
