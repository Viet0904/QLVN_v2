@page "/system_group"
@using WebBlazor.Services
@using Common.Model.UsGroup
@using Common.Model.UsUser
@using Common.Model.UsUserPermission
@using Common.Model.Common
@inject UserApiClient GroupApi
@inject IJSRuntime JS
@inject NotificationService Notification
@using WebBlazor.Components
@implements IDisposable

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Danh sách Nhóm người dùng</h5>
                <div class="card-header-right">
                    <ul class="list-unstyled card-option d-inline-block mb-0">
                        <li><i class="feather icon-maximize full-card"></i></li>
                        <li><i class="feather icon-minus minimize-card"></i></li>
                    </ul>
                </div>
            </div>

            <div class="card-block">
                @if (isLoading && !dataTableInitialized)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Đang tải dữ liệu...</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive" @ref="tableContainerRef">
                        <table id="@tableId" class="table table-striped table-hover table-bordered" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    @foreach (var col in TableColumns)
                                    {
                                        <th style="@(col.Width != null ? $"width: {col.Width}" : "")">@col.DisplayName</th>
                                    }
                                    <th style="width: 120px;">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* DataTable manage data *@
                            </tbody>
                        </table>
                        
                        <div class="dt-custom-pagination" style="display: flex; justify-content: space-between; align-items: center; padding: 10px 0;">
                            <div class="dt-pagination-info">
                                @if (paginatedGroups != null && paginatedGroups.TotalRecords > 0)
                                {
                                    <span>
                                        Hiển thị từ @((paginationRequest.PageNumber - 1) * paginationRequest.PageSize + 1)
                                        đến @(Math.Min(paginationRequest.PageNumber * paginationRequest.PageSize, paginatedGroups.TotalRecords))
                                        trong @paginatedGroups.TotalRecords bản ghi
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Không có dữ liệu phù hợp</span>
                                }
                            </div>
                            <div class="dt-pagination-buttons">
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="() => ChangePage(1)"
                                        disabled="@(paginatedGroups == null || !paginatedGroups.HasPreviousPage)">
                                    «
                                </button>
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="() => ChangePage(paginationRequest.PageNumber - 1)"
                                        disabled="@(paginatedGroups == null || !paginatedGroups.HasPreviousPage)">
                                    ‹
                                </button>
                                <span class="mx-2">
                                    Trang @paginationRequest.PageNumber / @(paginatedGroups?.TotalPages ?? 1)
                                </span>
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="() => ChangePage(paginationRequest.PageNumber + 1)"
                                        disabled="@(paginatedGroups == null || !paginatedGroups.HasNextPage)">
                                    ›
                                </button>
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="() => ChangePage(paginatedGroups?.TotalPages ?? 1)"
                                        disabled="@(paginatedGroups == null || !paginatedGroups.HasNextPage)">
                                    »
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

<!-- Group Modal Component -->
<UsGroupModal GroupModel="GroupModel"
              IsEditMode="isEditMode"
              IsProcessing="isProcessing"
              OnSubmit="HandleSaveGroup"
              OnClose="CloseModals" />

<!-- Generic Delete Confirmation Modal -->
<DeleteConfirmationModal IsVisible="@isDeleteModalVisible"
                        IsProcessing="@isProcessing"
                        ItemName="@deleteGroupName"
                        OnConfirm="HandleDeleteGroup"
                        OnCancel="CloseModals" />

@code {
    private PaginatedResponse<UsGroupViewModel> paginatedGroups = new();
    private PaginatedRequest paginationRequest = new() { PageNumber = 1, PageSize = 10 };
    
    private UsGroupFormModel GroupModel = new();
    
    // Header dynamics configuration
    private List<TableColumnConfig> TableColumns = new()
    {
        new TableColumnConfig { Property = "Id", DisplayName = "Mã Nhóm", Width = "15%" },
        new TableColumnConfig { Property = "Name", DisplayName = "Tên Nhóm", Width = "30%" },
        new TableColumnConfig { Property = "Note", DisplayName = "Ghi chú", Width = "35%" },
        new TableColumnConfig { Property = "RowStatus", DisplayName = "Trạng thái", Width = "20%" }
    };

    public class TableColumnConfig
    {
        public string Property { get; set; } = "";
        public string DisplayName { get; set; } = "";
        public string? Width { get; set; }
    }
    
    private string deleteGroupId = string.Empty;
    private string deleteGroupName = string.Empty;
    private bool isDeleteModalVisible = false;
    private bool isEditMode = false;
    private bool isProcessing = false;
    private bool isLoading = true;
    private bool dataTableInitialized = false;
    private bool layoutInitialized = false;
    private string tableId = "groupDataTable";
    private ElementReference tableContainerRef;
    private DotNetObjectReference<UsGroupList>? objRef;

    protected override async Task OnInitializedAsync()
    {
        objRef = DotNetObjectReference.Create(this);
        await LoadData();
        isLoading = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!isLoading && !layoutInitialized)
        {
            layoutInitialized = true;
            if (!dataTableInitialized)
            {
                await JS.InvokeVoidAsync("registerBlazorInstance", objRef);
                
                var config = new {
                    dom = "rt", // Chỉ hiện Table và Processing, gỡ bỏ mặc định
                    paging = false, 
                    info = false,
                    columnNames = TableColumns.Select(c => c.DisplayName).Concat(new[] { "Thao tác" }).ToArray(),
                    columns = TableColumns.Select(c => c.Property).ToArray(),
                    idField = "Id",
                    actionRenderer = "getGroupActionButtons",
                    addBtnId = "btnAddNewGroup"
                };

                await JS.InvokeVoidAsync("initGenericDataTable", $"#{tableId}", config);
                dataTableInitialized = true;
                await JS.InvokeVoidAsync("updateGenericDataTableData", $"#{tableId}", paginatedGroups);


               
            }
             // Reload layout scripts
                await JS.InvokeVoidAsync("eval", "$.getScript('js/pcoded.min.js')");
                await JS.InvokeVoidAsync("eval", "$.getScript('js/vartical-layout.min.js')");
                await JS.InvokeVoidAsync("eval", "$.getScript('js/script.js')");
            await JS.InvokeVoidAsync("adminAssetManager.hideLoader");
        }
    }

    private async Task LoadData()
    {
        paginatedGroups = await GroupApi.GetPaginatedGroupsAsync(paginationRequest);
    }

    private async Task ChangePage(int pageNumber)
    {
        paginationRequest.PageNumber = pageNumber;
        await RefreshData();
    }

    [JSInvokable("ChangePageSize")]
    public async Task ChangePageSize(int pageSize)
    {
        paginationRequest.PageSize = pageSize;
        paginationRequest.PageNumber = 1;
        await RefreshData();
    }

    [JSInvokable("SearchUsers")] // Search logic is SERVER-SIDE
    public async Task SearchGroups(string term)
    {
        paginationRequest.SearchTerm = term;
        paginationRequest.PageNumber = 1;
        await RefreshData();
    }

    private async Task RefreshData()
    {
        paginatedGroups = await GroupApi.GetPaginatedGroupsAsync(paginationRequest);
        if (dataTableInitialized)
        {
            await JS.InvokeVoidAsync("updateGenericDataTableData", $"#{tableId}", paginatedGroups);
        }
        StateHasChanged();
    }


    [JSInvokable]
    public async Task EditGroup(string id)
    {
        var group = await GroupApi.GetGroupByIdAsync(id); 
        if (group != null)
        {
            GroupModel = new UsGroupFormModel {
                Id = group.Id,
                Name = group.Name,
                Note = group.Note,
                RowStatus = group.RowStatus
            };
            isEditMode = true;
            StateHasChanged();
            await JS.InvokeVoidAsync("eval", "$('#groupModal').modal('show')");
        }
    }

    [JSInvokable("DeleteGroup")]
    public async Task OpenDeleteModal(string id, string name)
    {
        deleteGroupId = id;
        deleteGroupName = name;
        isDeleteModalVisible = true;
        StateHasChanged();
    }

    [JSInvokable("OpenAddModal")]
    public async Task ShowAddModal()
    {
        GroupModel = new UsGroupFormModel { RowStatus = 1 };
        isEditMode = false;
        StateHasChanged();
        await JS.InvokeVoidAsync("eval", "$('#groupModal').modal('show')");
    }

    private async Task HandleSaveGroup()
    {
        if (isProcessing) return;
        isProcessing = true;
        try
        {
            if (isEditMode)
            {
                var model = new UsGroupUpdateModel { Id = GroupModel.Id, Name = GroupModel.Name, Note = GroupModel.Note, RowStatus = GroupModel.RowStatus };
                var updated = await GroupApi.UpdateGroupAsync(model);
                if (updated != null)
                {
                    await Notification.ShowSuccessAsync("Cập nhật nhóm thành công");
                    await RefreshData();
                    await JS.InvokeVoidAsync("updateDataTableRowSmooth", $"#{tableId}", updated.Id);
                }
            }
            else
            {
                var model = new UsGroupCreateModel { Name = GroupModel.Name, Note = GroupModel.Note };
                var created = await GroupApi.CreateGroupAsync(model);
                if (created != null)
                {
                    await Notification.ShowSuccessAsync("Thêm nhóm mới thành công");
                    await RefreshData();
                    await JS.InvokeVoidAsync("addDataTableRowSmooth", $"#{tableId}", created.Id);
                }
            }
            await CloseModals();
        }
        catch (Exception ex)
        {
            await Notification.ShowErrorAsync(ex.Message);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task HandleDeleteGroup()
    {
        if (isProcessing) return;
        isProcessing = true;
        try
        {
            await JS.InvokeVoidAsync("deleteDataTableRowSmooth", $"#{tableId}", deleteGroupId);
            await Task.Delay(400);
            
            var result = await GroupApi.DeleteGroupAsync(deleteGroupId);
            if (result)
            {
                await Notification.ShowSuccessAsync("Xóa nhóm thành công");
                await RefreshData();
            }
            isDeleteModalVisible = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await Notification.ShowErrorAsync(ex.Message);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task CloseModals()
    {
        await JS.InvokeVoidAsync("eval", "$('#groupModal').modal('hide')");
        
        GroupModel = new UsGroupFormModel();
        deleteGroupId = string.Empty;
        deleteGroupName = string.Empty;
        isDeleteModalVisible = false;
        isProcessing = false;
        StateHasChanged();
    }
    // Giải phóng 
    public void Dispose()
    {
        objRef?.Dispose();
        if (dataTableInitialized)
        {
            _ = JS.InvokeVoidAsync("destroyGenericDataTable", $"#{tableId}");
        }
    }
}

<style>
    .row-added-highlight { background-color: #d4edda !important; transition: background-color 2s; }
    .row-updated-highlight { background-color: #fff3cd !important; transition: background-color 2s; }
    .row-deleted-fade { opacity: 0.3; transform: translateX(20px); transition: all 0.5s; }
</style>
