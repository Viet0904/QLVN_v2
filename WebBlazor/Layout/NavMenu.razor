@inject WebBlazor.Services.MenuService MenuService
@inject NavigationManager Navigation
@implements IDisposable

<nav class="pcoded-navbar">
    <div class="pcoded-inner-navbar main-menu">
        @if (isLoading)
        {
            <div class="text-center p-4">
                <i class="feather icon-loader"></i>
                <p>Đang tải...</p>
            </div>
        }
        else
        {
            <!-- Navigation Section -->
            <div class="pcoded-navigatio-lavel">Navigation</div>
            <ul class="pcoded-item pcoded-left-item">
                <li class="@(IsActive("") || IsActive("dashboard") ? "active" : "")">
                    <a href="/">
                        <span class="pcoded-micon"><i class="feather icon-home"></i></span>
                        <span class="pcoded-mtext">Dashboard</span>
                    </a>
                </li>
            </ul>

            @foreach (var parentMenu in GetParentMenus())
            {
                var children = GetChildMenus(parentMenu.Name);
                
                if (children.Any())
                {
                    <!-- Section với dropdown -->
                    <div class="pcoded-navigatio-lavel">@parentMenu.Note</div>
                    <ul class="pcoded-item pcoded-left-item">
                        <li class="pcoded-hasmenu @(IsMenuOrChildActive(parentMenu.Name) ? "active" : "") @(IsExpanded(parentMenu.Name) ? "pcoded-trigger" : "")">
                            <a href="javascript:void(0)" @onclick="() => ToggleMenu(parentMenu.Name)">
                                <span class="pcoded-micon"><i class="@parentMenu.Icon"></i></span>
                                <span class="pcoded-mtext">@parentMenu.Note</span>
                            </a>
                            <ul class="pcoded-submenu">
                                @foreach (var child in children)
                                {
                                    <li class="@(IsActive(child.Name) ? "active" : "")">
                                        <a href="/@child.Name">
                                            <span class="pcoded-mtext">@child.Note</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <!-- Section không có dropdown -->
                    <div class="pcoded-navigatio-lavel">@parentMenu.Note</div>
                    <ul class="pcoded-item pcoded-left-item">
                        <li class="@(IsActive(parentMenu.Name) ? "active" : "")">
                            <a href="/@parentMenu.Name">
                                <span class="pcoded-micon"><i class="@parentMenu.Icon"></i></span>
                                <span class="pcoded-mtext">@parentMenu.Note</span>
                            </a>
                        </li>
                    </ul>
                }
            }
        }
    </div>
</nav>

@code {
    private List<Common.Model.SysMenu.SysMenuViewModel> allMenus = new();
    private bool isLoading = true;
    private string currentUrl = "";
    private HashSet<string> expandedMenus = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadMenus();
        Navigation.LocationChanged += OnLocationChanged;
        UpdateCurrentUrl();
        AutoExpandActiveMenu();
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        UpdateCurrentUrl();
        StateHasChanged();
    }

    private void UpdateCurrentUrl()
    {
        var uri = new Uri(Navigation.Uri);
        currentUrl = uri.AbsolutePath.TrimStart('/');
        if (string.IsNullOrEmpty(currentUrl))
        {
            currentUrl = "dashboard";
        }
    }

    private async Task LoadMenus()
    {
        try
        {
            isLoading = true;
            allMenus = await MenuService.GetAllMenusAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading menus: {ex.Message}");
            allMenus = new List<Common.Model.SysMenu.SysMenuViewModel>();
        }
        finally
        {
            isLoading = false;
        }
    }

    // Lấy parent menus (không có ParentMenu hoặc ParentMenu = NULL)
    private List<Common.Model.SysMenu.SysMenuViewModel> GetParentMenus()
    {
        return allMenus
            .Where(m => string.IsNullOrEmpty(m.ParentMenu) && m.Name != "dashboard")
            .OrderBy(m => m.Name)
            .ToList();
    }

    // Lấy child menus của 1 parent
    private List<Common.Model.SysMenu.SysMenuViewModel> GetChildMenus(string parentName)
    {
        if (string.IsNullOrEmpty(parentName)) return new List<Common.Model.SysMenu.SysMenuViewModel>();
        
        return allMenus
            .Where(m => !string.IsNullOrEmpty(m.ParentMenu) && m.ParentMenu.Equals(parentName, StringComparison.OrdinalIgnoreCase))
            .OrderBy(m => m.Name)
            .ToList();
    }

    private bool IsActive(string menuName)
    {
        return currentUrl.Equals(menuName, StringComparison.OrdinalIgnoreCase);
    }

    private bool IsMenuOrChildActive(string menuName)
    {
        if (IsActive(menuName)) return true;
        
        var childMenus = GetChildMenus(menuName);
        return childMenus.Any(child => IsActive(child.Name));
    }

    private bool IsExpanded(string menuName)
    {
        return expandedMenus.Contains(menuName);
    }

    private void ToggleMenu(string menuName)
    {
        if (expandedMenus.Contains(menuName))
        {
            expandedMenus.Remove(menuName);
        }
        else
        {
            // Optional: Close others if desired (accordion style)
            // expandedMenus.Clear(); 
            expandedMenus.Add(menuName);
        }
    }

    private void AutoExpandActiveMenu()
    {
        var parents = GetParentMenus();
        foreach (var parent in parents)
        {
            if (IsMenuOrChildActive(parent.Name))
            {
                expandedMenus.Add(parent.Name);
            }
        }
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
}
